{
  "manifest_version": 3,
  "name": "LoopCV",
  "version": "1.0.0",
  "description": "The first platform in the market that completely automates the job search.",
  "author": "LoopCV.com",
  "action": {
    "default_popup": "index.html",
    "default_title": "Automates The Job Search"
  },
  "icons": { "16": "icon_16.png", "48": "icon_48.png", "128": "icon_128.png" },
  "permissions": ["cookies", "tabs", "scripting", "https://app.loopcv.pro/*"],
  "host_permissions": ["https://app.loopcv.pro/*"],
  "background": {
    "service_worker": "background.js"
  }
}
